<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/login">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.misrutinas.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <activity
        android:id="@+id/activityFragmentos"
        android:name="com.example.misrutinas.ActivityFragmentos"
        android:label="activity_fragmentos"
        tools:layout="@layout/activity_fragmentos" />
    <fragment
        android:id="@+id/fragmentInicial"
        android:name="com.example.misrutinas.FragmentInicial"
        android:label="fragment_inicial"
        tools:layout="@layout/fragment_inicial" />
    <fragment
        android:id="@+id/login"
        android:name="com.example.misrutinas.Login"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_login_to_fragmentInicial"
            app:destination="@id/fragmentInicial" />
    </fragment>
</navigation>